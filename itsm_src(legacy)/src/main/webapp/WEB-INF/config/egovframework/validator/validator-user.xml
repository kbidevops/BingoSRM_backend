<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE form-validation PUBLIC 
    "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1//EN" 
    "http://jakarta.apache.org/commons/dtds/validator_1_1.dtd">

<form-validation>

    <formset>
        <form name="userFormVO">
        	<field property="userVO.userId" depends="required,maxlength">
        		<arg0 key="사용자ID" />
        		<arg1 name="maxlength" key="${var:maxlength}" resource="false"/>
				<var>
					<var-name>maxlength</var-name>
					<var-value>25</var-value>
				</var>
			</field>
			<field property="userVO.userPassword" depends="password1, password3, password4">
                <arg0 key="비밀번호" />
            </field>
            <field property="userVO.userNm" depends="required,maxlength">
                <arg0 key="사용자명" />
                <arg1 name="maxlength" key="${var:maxlength}" resource="false"/>
				<var>
					<var-name>maxlength</var-name>
					<var-value>100</var-value>
				</var>
            </field>
            <field property="userVO.psitn" depends="required,maxlength">
                <arg0 key="소속" />
                <arg1 name="maxlength" key="${var:maxlength}" resource="false"/>
				<var>
					<var-name>maxlength</var-name>
					<var-value>100</var-value>
				</var>
            </field>
            <field property="userVO.clsf" depends="required,maxlength">
                <arg0 key="직급" />
                <arg1 name="maxlength" key="${var:maxlength}" resource="false"/>
				<var>
					<var-name>maxlength</var-name>
					<var-value>100</var-value>
				</var>
            </field>
            <field property="userVO.email" depends="email">
                <arg0 key="이메일" />                
            </field>
            <field property="userVO.moblphon" depends="required,mask">
                <arg0 key="휴대전화" />
				<var>
					<var-name>mask</var-name>
					<var-value>^\d{2,3}-\d{3,4}-\d{4}$</var-value>
				</var>
            </field>
            <field property="userVO.acntReqstResn" depends="required,maxlength">
                <arg0 key="계정신청사유/비고" />
                <arg1 name="maxlength" key="${var:maxlength}" resource="false"/>
				<var>
					<var-name>maxlength</var-name>
					<var-value>4000</var-value>
				</var>
            </field>
        	
        </form>
    </formset>

</form-validation>